# Database Configuration
MONGODB_URI=mongodb://localhost:27017/casperdev

# JWT Configuration
JWT_SECRET=your-super-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# HubSpot Integration (Optional - for HubSpot sync features)
HUBSPOT_ACCESS_TOKEN=your-hubspot-access-token
HUBSPOT_APP_ID=your-hubspot-app-id

# Slack Integration - REQUIRED FOR SLACK CONNECTION
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#general
SLACK_SIGNING_SECRET=your-slack-signing-secret

# External Services (Optional)
WEATHER_API_KEY=your-weather-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
