{
  "name": "Claude Content Automation",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hour",
              "triggerAtHour": 9
            }
          ]
        }
      },
      "id": "daily-trigger",
      "name": "Daily Trigger (9 AM)",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [240, 300]
    },
    {
      "parameters": {
        "url": "http://host.docker.internal:5000/api/integrations/hubspot/activities",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{$env.CASPERDEV_JWT_TOKEN}}"
            }
          ]
        },
        "options": {}
      },
      "id": "get-hubspot-data",
      "name": "Get HubSpot Data",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [460, 300]
    },
    {
      "parameters": {
        "url": "http://host.docker.internal:5000/api/integrations/claude/generate",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{$env.CASPERDEV_JWT_TOKEN}}"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "jsonBody": "{\n  \"prompt\": \"Based on the following HubSpot activity data, create a daily business summary email that highlights key metrics, recent activities, and actionable insights for the leadership team:\\n\\n{{JSON.stringify($json.activities, null, 2)}}\",\n  \"model\": \"claude-3-sonnet-20240229\",\n  \"maxTokens\": 2000\n}",
        "options": {}
      },
      "id": "generate-summary",
      "name": "Generate Daily Summary",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [680, 300]
    },
    {
      "parameters": {
        "channel": "#daily-reports",
        "text": "ðŸ“Š *Daily Business Summary - {{new Date().toLocaleDateString()}}*\n\n{{$json.response}}\n\n_Automatically generated by Claude AI via n8n_"
      },
      "id": "send-to-slack",
      "name": "Send to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2,
      "position": [900, 300],
      "credentials": {
        "slackApi": {
          "id": "slack-credential",
          "name": "Slack API"
        }
      }
    },
    {
      "parameters": {
        "url": "http://host.docker.internal:5000/api/integrations/claude/generate",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{$env.CASPERDEV_JWT_TOKEN}}"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "jsonBody": "{\n  \"prompt\": \"Create engaging social media content (LinkedIn post) based on today's business activities and achievements. Make it professional, inspiring, and include relevant hashtags:\\n\\n{{JSON.stringify($('get-hubspot-data').item.json.activities, null, 2)}}\",\n  \"model\": \"claude-3-haiku-20240307\",\n  \"maxTokens\": 500\n}",
        "options": {}
      },
      "id": "generate-social-content",
      "name": "Generate Social Content",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [680, 500]
    },
    {
      "parameters": {
        "channel": "#marketing",
        "text": "ðŸ“± *Suggested Social Media Post*\n\n{{$json.response}}\n\n_Ready to post on LinkedIn! Generated by Claude AI_"
      },
      "id": "send-social-to-slack",
      "name": "Send Social Content to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2,
      "position": [900, 500],
      "credentials": {
        "slackApi": {
          "id": "slack-credential",
          "name": "Slack API"
        }
      }
    }
  ],
  "connections": {
    "Daily Trigger (9 AM)": {
      "main": [
        [
          {
            "node": "Get HubSpot Data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get HubSpot Data": {
      "main": [
        [
          {
            "node": "Generate Daily Summary",
            "type": "main",
            "index": 0
          },
          {
            "node": "Generate Social Content",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Daily Summary": {
      "main": [
        [
          {
            "node": "Send to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Social Content": {
      "main": [
        [
          {
            "node": "Send Social Content to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {
    "timezone": "UTC"
  },
  "versionId": "1.0.0"
}