# Database Configuration
MONGODB_URI=mongodb://localhost:27017/casperdev
JWT_SECRET=your-super-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# HubSpot Integration
HUBSPOT_ACCESS_TOKEN=your-hubspot-access-token
HUBSPOT_APP_ID=your-hubspot-app-id

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#general
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Ollama/LLaMA Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120000

# Pieces Integration
PIECES_OS_URL=http://localhost:1000
PIECES_API_KEY=your-pieces-api-key

# Claude/Anthropic API (for n8n workflows)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Security & CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External APIs
WEATHER_API_KEY=your-weather-api-key
SENDGRID_API_KEY=your-sendgrid-key

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# Development Tools
DEBUG=casperdev:*
LOG_LEVEL=debug